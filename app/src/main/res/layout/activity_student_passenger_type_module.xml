<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBGcolor"
    tools:context=".activity_student_passenger_type_module">

    <TextView
        android:id="@+id/textView_passenger_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="268dp"
        android:text="Passenger Type"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_pwd"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-650dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:inputType="text"
        android:text="Student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_passenger_type" />

    <EditText
        android:id="@+id/date_of_birth_input"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:hint="School Address"
        android:inputType="text"
        android:textSize="16sp"
        android:textColorHint="@color/hintText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_level_of_study" />

    <TextView
        android:id="@+id/textView_level_of_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="256dp"
        android:text="School Address"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/school_name_input" />

    <Spinner
        android:id="@+id/spinner_level_of_study"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView_enrollment_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrollment Certifacate (upload)"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="651dp" />

    <EditText
        android:id="@+id/date_of_birth_student_input"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Month/Date/Year"
        android:inputType="text"
        android:textColorHint="@color/hintText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_date_of_birth_student" />

    <TextView
        android:id="@+id/textView_date_of_birth_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="297dp"
        android:text="Date of Birth"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_enrollment_certificate" />

    <TextView
        android:id="@+id/textView_validate_student_id"
        android:layout_width="249dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:text="Validate Student ID (upload)"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_level_of_study"
        tools:layout_editor_absoluteX="18dp" />

    <EditText
        android:id="@+id/school_name_input"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:hint="School Name"
        android:inputType="text"
        android:textSize="18sp"
        android:textColorHint="@color/hintText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editText_school_id_number_input"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:hint="School ID number"
        android:inputType="text"
        android:textSize="16sp"
        android:textColorHint="@color/hintText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="School"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        tools:layout_editor_absoluteX="18dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="250dp"
        android:text="School ID Number"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_school_id_number_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_of_birth_input" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Level of Study"
        android:textColor="@color/primaryText"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/editText_school_id_number_input"
        tools:layout_editor_absoluteX="17dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Student"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_passenger_type" />

</androidx.constraintlayout.widget.ConstraintLayout>